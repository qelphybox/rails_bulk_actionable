<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom py-3">
    <h2 class="h4 mb-0 fw-bold">
      <i class="bi bi-heart me-2 text-danger fs-5"></i>
      Информация о хобби
    </h2>
  </div>
  <div class="card-body p-4">
    <%= render @hobby %>
  </div>
</div>

<div class="d-flex flex-wrap gap-2">
  <%= link_to edit_hobby_path(@hobby), class: "btn btn-primary" do %>
    <i class="bi bi-pencil me-1"></i>
    Редактировать
  <% end %>
  <%= link_to hobbies_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left me-1"></i>
    Назад к списку
  <% end %>
  <%= button_to @hobby, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Вы уверены?" } } do %>
    <i class="bi bi-trash me-1"></i>
    Удалить
  <% end %>
</div>
