<div class="card shadow-sm mb-3">
  <div class="card-body">
    <%= render @hobby %>
  </div>
</div>

<div class="d-flex flex-wrap gap-2">
  <%= link_to "Edit this hobby", edit_hobby_path(@hobby), class: "btn btn-primary" %>
  <%= link_to "Back to hobbies", hobbies_path, class: "btn btn-outline-secondary" %>
  <%= button_to "Destroy this hobby", @hobby, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
</div>
