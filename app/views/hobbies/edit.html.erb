<% content_for :title, "Редактирование хобби" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2 mb-0 fw-bold">
    <i class="bi bi-pencil-square me-2 text-danger fs-3"></i>
    Редактирование хобби
  </h1>
  <%= link_to hobbies_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left me-1"></i>
    Назад
  <% end %>
</div>

<%= render "form", hobby: @hobby %>

<div class="mt-3">
  <%= link_to @hobby, class: "text-decoration-none" do %>
    <i class="bi bi-eye me-1"></i>
    Просмотр этого хобби
  <% end %>
</div>
