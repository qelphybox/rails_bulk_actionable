<label for="hobby-<%= hobby.id %>-checkbox" id="<%= dom_id hobby %>" class="d-flex justify-content-between" role="button">
  <div class="d-flex align-items-center mb-3">
    <div class="bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 p-3" style="width: 60px; height: 60px;">
      <i class="bi bi-heart-fill text-danger fs-4"></i>
    </div>
    <div>
      <h3 class="h5 mb-0 fw-bold">
        <%= hobby.name %>
      </h3>
      <p class="text-muted small mb-0">Hobby</p>
    </div>
  </div>

  <div class="form-check mt-1 p-0">
    <input
      class="form-check-input"
      type="checkbox"
      value="<%= hobby.id %>"
      id="hobby-<%= hobby.id %>-checkbox"
      data-bulk-actionable-target="itemCheckbox"
      data-id="<%= hobby.id %>"
      data-action="click->bulk-actionable#toggleItemCheckbox">
  </div>
</label>
