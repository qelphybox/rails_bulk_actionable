<%= form_with(model: person, class: "card shadow-sm border-0", data: { controller: "nested-form", nested_form_wrapper_selector_value: ".nested-form-wrapper" }) do |form| %>
  <div class="card-header bg-white border-bottom py-3">
    <h3 class="h5 mb-0 fw-bold">Данные человека</h3>
  </div>
  <div class="card-body p-4">
    <% if person.errors.any? %>
      <div class="alert alert-danger border-0 shadow-sm">
        <h4 class="alert-heading h6 mb-2">
          <i class="bi bi-exclamation-triangle me-2 fs-5"></i>
          Обнаружено <%= pluralize(person.errors.count, "ошибка", "ошибки", "ошибок") %>:
        </h4>
        <ul class="mb-0">
          <% person.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row g-4">
      <div class="col-md-6">
        <%= form.label :first_name, class: "form-label fw-medium" do %>
          <i class="bi bi-person me-1"></i>
          Имя
        <% end %>
        <%= form.text_field :first_name, class: "form-control form-control-lg", placeholder: "Введите имя" %>
      </div>

      <div class="col-md-6">
        <%= form.label :last_name, class: "form-label fw-medium" do %>
          <i class="bi bi-person-badge me-1"></i>
          Фамилия
        <% end %>
        <%= form.text_field :last_name, class: "form-control form-control-lg", placeholder: "Введите фамилию" %>
      </div>

      <div class="col-md-6">
        <%= form.label :birth_date, class: "form-label fw-medium" do %>
          <i class="bi bi-calendar3 me-1"></i>
          Дата рождения
        <% end %>
        <%= form.date_field :birth_date, class: "form-control form-control-lg" %>
      </div>
    </div>

    <hr class="my-4">

    <div class="mb-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <label class="form-label fw-medium mb-0">
          <i class="bi bi-telephone me-1"></i>
          Контакты
        </label>
        <button type="button" class="btn btn-sm btn-outline-primary" data-action="nested-form#add">
          <i class="bi bi-plus-circle me-1"></i>
          Добавить контакт
        </button>
      </div>
      <template data-nested-form-target="template">
        <%= form.fields_for :contacts, Contact.new, child_index: "NEW_RECORD" do |contact_form| %>
          <%= render "contact_form", f: contact_form %>
        <% end %>
      </template>
      <div data-nested-form-target="target">
        <%= form.fields_for :contacts do |contact_form| %>
          <%= render "contact_form", f: contact_form %>
        <% end %>
      </div>
    </div>

    <hr class="my-4">

    <div class="mb-4">
      <label class="form-label fw-medium mb-3">
        <i class="bi bi-heart me-1"></i>
        Хобби
      </label>
      <div class="row g-2">
        <% @hobbies.each do |hobby| %>
          <div class="col-md-4 col-lg-3">
            <div class="form-check">
              <%= form.check_box :hobby_ids, { multiple: true, checked: person.hobby_ids.include?(hobby.id) }, hobby.id, nil %>
              <%= form.label "hobby_ids_#{hobby.id}", hobby.name, class: "form-check-label" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <div class="card-footer bg-white border-top py-3">
    <div class="d-flex gap-2">
      <%= form.submit "Сохранить", class: "btn btn-primary btn-lg px-4" %>
      <%= link_to "Отмена", people_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>
  </div>
<% end %>
