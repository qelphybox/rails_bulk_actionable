<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom py-3">
    <h2 class="h4 mb-0 fw-bold">
      <i class="bi bi-person me-2 text-primary fs-5"></i>
      Person Information
    </h2>
  </div>
  <div class="card-body p-4">
    <div class="mb-4">
      <h3 class="fw-bold">
        <%= [@person.first_name, @person.last_name].compact.join(" ") %>
      </h3>
      <% if @person.birth_date.present? %>
        <p>
          <strong>Birth Date:</strong>
          <%= @person.birth_date %>
        </p>
      <% end %>
    </div>
    <div class="mb-3">
      <h5 class="fw-semibold">Contacts</h5>
      <% if @person.contacts.any? %>
        <ul class="list-unstyled mb-0">
          <% @person.contacts.each do |contact| %>
            <li>
              <strong><%= contact.contact_type.capitalize %>:</strong>
              <%= contact.contact_value %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <span class="text-muted">No contacts</span>
      <% end %>
    </div>
    <div class="mb-3">
      <h5 class="fw-semibold">Hobbies</h5>
      <% if @person.hobbies.any? %>
        <ul class="list-inline mb-0">
          <% @person.hobbies.each do |hobby| %>
            <li class="list-inline-item badge rounded-pill bg-secondary bg-opacity-10 text-secondary border">
              <%= hobby.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <span class="text-muted">No hobbies</span>
      <% end %>
    </div>
  </div>
</div>

<div class="d-flex flex-wrap gap-2">
  <%= link_to edit_person_path(@person), class: "btn btn-primary" do %>
    <i class="bi bi-pencil me-1"></i>
    Edit
  <% end %>
  <%= link_to people_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left me-1"></i>
    Back to List
  <% end %>
  <%= button_to @person, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } do %>
    <i class="bi bi-trash me-1"></i>
    Delete
  <% end %>
</div>
