<div id="<%= dom_id person %>">
  <div class="d-flex align-items-center mb-3">
    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 p-3">
      <i class="bi bi-person text-primary fs-4"></i>
    </div>
    <div>
      <h3 class="h5 mb-0 fw-bold">
        <%= [person.first_name, person.last_name].compact.join(" ") %>
      </h3>
      <% if person.birth_date.present? %>
        <p class="text-muted small mb-0">
          <i class="bi bi-calendar3 me-1"></i>
          <%= person.birth_date %>
        </p>
      <% end %>
    </div>
  </div>
</div>
