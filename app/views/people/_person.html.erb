<label for="person-<%= person.id %>-checkbox" id="<%= dom_id person %>" class="d-flex justify-content-between" role="button">
  <div class="d-flex align-items-center mb-3">
    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 p-3" style="width: 60px; height: 60px;">
      <i class="bi bi-person text-primary fs-4"></i>
    </div>
    <div>
      <h3 class="h5 mb-0 fw-bold">
        <%= [person.first_name, person.last_name].compact.join(" ") %>
      </h3>
      <% if person.birth_date.present? %>
        <p class="text-muted small mb-0">
          <i class="bi bi-calendar3 me-1"></i>
          <%= person.age %> years old
        </p>
      <% end %>
    </div>
  </div>

  <div class="form-check mt-1 p-0">
    <input
      class="form-check-input"
      type="checkbox"
      value="<%= person.id %>"
      id="person-<%= person.id %>-checkbox"
      data-bulk-actionable-target="itemCheckbox"
      data-id="<%= person.id %>"
      data-action="click->bulk-actionable#toggleItemCheckbox">
  </div>
</label>
