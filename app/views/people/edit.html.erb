<% content_for :title, "Edit Person" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2 mb-0 fw-bold">
    <i class="bi bi-pencil-square me-2 text-primary fs-3"></i>
    Edit Person
  </h1>
  <%= link_to people_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left me-1"></i>
    Back
  <% end %>
</div>

<%= render "form", person: @person %>

<div class="mt-3">
  <%= link_to @person, class: "text-decoration-none" do %>
    <i class="bi bi-eye me-1"></i>
    View this person
  <% end %>
</div>
